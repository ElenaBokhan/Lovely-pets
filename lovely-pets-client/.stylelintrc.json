{
    "extends": "stylelint-config-standard",
    "ignoreFiles": ["dist"],
    "rules": {
        "selector-pseudo-class-no-unknown": [
            true,
            {
                "ignorePseudoClasses": ["global"]
            }
        ],
        "no-descending-specificity": null,
        "property-no-unknown": true,
        "selector-class-pattern": "^[a-z][-a-zA-z0-9]+$"
    }
}
